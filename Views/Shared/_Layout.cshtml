<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>@ViewBag.Title</title>
   @Styles.Render("~/Content/css")
   @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
      <div class="container">
         <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
               <li class="@(ViewBag.ActiveLink == "Portada" ? "active-nav-link" : "")">@Html.ActionLink("Portada", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
               <li class="@(ViewBag.ActiveLink == "Colaboradores" ? "active-nav-link" : "")">@Html.ActionLink("Colaboradores", "Index", "Colaboradores", new { area = "" }, new { @class = "nav-link" })</li>
               <li class="@(ViewBag.ActiveLink == "Herramientas" ? "active-nav-link" : "")">@Html.ActionLink("Herramientas", "Index", "Herramientas", new { area = "" }, new { @class = "nav-link" })</li>
               <li class="@(ViewBag.ActiveLink == "PrestamosHerramientas" ? "active-nav-link" : "")">@Html.ActionLink("Prestar/Devolver", "Index", "PrestamosHerramientas", new { area = "" }, new { @class = "nav-link" })</li>
               <li class="@(ViewBag.ActiveLink == "Contact" ? "active-nav-link" : "")">@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
         </div>
      </div>
   </nav>
   <div class="container body-content">
      @RenderBody()
      <hr />
      <footer>
         <p>&copy; @DateTime.Now.Year - AriasRomanJonathan_Proyecto1</p>
      </footer>
   </div>

   @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/bootstrap")
   @Styles.Render("~/Content/Site.css")
   @RenderSection("scripts", required: false)
</body>
</html>
